<h1>Search</h1>

<%= form_tag(colleges_search_path, :method => "get") do %>
  <%= label_tag(:q, "Search for:") %>
  <%= text_field_tag(:q) %>
  <%= submit_tag("Search") %>
<% end %>


<table>
  <tr>
    <th>Name</th>
    <th>State</th>
    <th>Tuition and Fees</th>
    <th>Control</th>
    <th>Urbanization</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @colleges.each do |college| %>
  <tr>
    <td><%= college.inst_name %></td> 
    <td><%= college.state %></td>  
    <td><%= college.tuition_fees %></td>
    <td><%= college.control %></td>
    <td><%= college.urbanization %></td>
    <td><%= link_to 'Show', college %></td>
  </tr>
<% end %>
</table>
<br />